{% extends 'layouts/2col-sidebarflex-left.njk' %}

{% block title %}{{ page.title }}{% endblock %}

{% block pageContent %}

{{ anchor('buttons') }}
{% call section() %}
  {% call columns() %}
    {{ title('Buttons') }}
    {{ subtitle(level = 5, 'For clicking.')}}

    {{ subtitle('Primary') }}
    {{ button() }}

    {% call code() %}
      {% raw %}
      {{ button() }}

      // Alternatively…

      {{ button( type="primary" ) }}
      {% endraw %}
    {% endcall %}

    {{ subtitle('Secondary') }}
    {{ button(type='secondary') }}

    {% call code() %}
      {% raw %}
      {{ button( type="secondary" ) }}
      {% endraw %}
    {% endcall %}

    {{ subtitle('Accent') }}
    {{ button(type='accent') }}

    {% call code() %}
      {% raw %}
      {{ button( type="accent" ) }}
      {% endraw %}
    {% endcall %}

    {{ subtitle('Neutral') }}
    {{ button(type='neutral') }}

    {% call code() %}
      {% raw %}
      {{ button( type="neutral" ) }}
      {% endraw %}
    {% endcall %}

  {% endcall %}
{% endcall %}

{{ anchor('forms') }}
{% call section() %}
  {% call columns() %}
    {{ title('Forms') }}
    {{ subtitle(level = 5, 'For inputing junk.')}}

    {{ subtitle('Text Input') }}
    {{ textInput(icon="cat", id="email-address", label="Full Name", placeholder="eg., Rick Sanchez", type="text") }}

    {% call code() %}
      {% raw %}
      // text inputs are full width by default…
      {{ textInput(fullWidth="false", id="email-address", label="Full Name", placeholder="eg., Rick Sanchez", type="text") }}

      {% endraw %}
    {% endcall %}

    {{ subtitle('Textarea') }}
    {{ textarea(id="Message", label="Message") }}

    {% call code() %}
      {% raw %}
      {{ textarea(id="message", label="Full Name") }}

      {% endraw %}
    {% endcall %}

    {{ subtitle('Radios') }}
    <form>
    {{ radio(
      name="Yay",
      array=[
        {
          label:"one"
        },
        {
          label:"two",
          default: true
        },
        {
          label:"three"
        }
      ]
      ) }}
    </form>

    {% call code() %}
      {% raw %}
      {{ radio( name="Yay",array=[{label:"one"},{label:"two",default: true},{label:"three"}]) }}

      {% endraw %}
    {% endcall %}

    {{ subtitle('Checkboxes') }}
    <form>
    {{ checkbox(
      name="Yay",
      array=[
        {
          label:"one"
        },
        {
          label:"two",
          default: true
        },
        {
          label:"three"
        }
      ]
      ) }}
    </form>

    {% call code() %}
      {% raw %}
      {{ checkbox( name="Yay",array=[{label:"one"},{label:"two",default: true},{label:"three"}]) }}

      {% endraw %}
    {% endcall %}

    {{ subtitle('Selects') }}
    <form>
    {{ select(
      label="State",
      placeholder="Select a state...",
      array=[
        {
          option:"CA"
        },
        {
          option:"IL"
        },
        {
          option:"NY"
        }
      ]
      ) }}
    </form>

    {% call code() %}
      {% raw %}
      {{ select( label="State", placeholder="Select a state...", array=[{option:"CA"},{option:"IL",default: true},{option:"NY"}]) }}

      {% endraw %}
    {% endcall %}

  {% endcall %}
{% endcall %}

{% endblock %}
