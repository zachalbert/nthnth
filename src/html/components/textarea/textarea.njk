{##
 # Text area component
 #
 # @param {string}  [errorText="Please enter your Full Name"] - When an error occurs this will be what the user sees
 # @param {boolean} [fullWidth=false] - Controls whether or not the input is full width...
 # @param {string}  [helpText='People will see your full name in the forum'] - When the user needs help/assurance use this param
 # @param {string}  [icon='person'] - If used, the icon will appear on the top right of the input (juicon)
 # @param {string}  [id]
 # @param {string}  [label] - How the user knows what they're supposed to fill in
 # @param {string}  [placeholder] - When an example is helpful
 # @param {string}  [value] - When the field should be populated by default
 #
 # @example
 # {{ textarea(id="Message", label="Message") }}
 #}

{% macro textarea(
  errorText,
  fullWidth = true,
  helpText,
  icon,
  id,
  label,
  placeholder,
  value
) %}

{% if label %}<label for="{{id}}" class="label">{{label}}</label>{% endif %}
<div class="form-element-wrap">
  {% if icon %}<div class="icon icon--{{icon}}"></div>{% endif %}
  <textarea id="{{id}}" class="form-element form-element--textarea{{' form-element--fw' if fullWidth}}" name="{{name}}" placeholder="{{placeholder}}">{{value if value}}</textarea>
  {% if helpText %}<div class="caption">{{helpText}}</div>{% endif %}
</div>

{% endmacro %}
