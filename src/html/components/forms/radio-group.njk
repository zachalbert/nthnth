{##
 # Radio component
 #
 # @param {string}    [name="Yay"]
 # @param {[Object]}  [{label:"two",default: true}]
 #
 # @example
 # {{ radio( name="Yay",array=[{label:"one"},{label:"two",default: true},{label:"three"}]) }}
 #}

{% macro radio(
  name,
  array = []
) %}
<ul class="form-element-list">
{% for i in array %}
<li class="form-element-list__item">
  <label class="label" for="{{ name + '-' + i.label }}">
    <input type="radio" class="form-element form-element--radio" id="{{ name + '-' + i.label }}" name="{{ name }}" value="Blah"{{ ' checked' if i.default }}>
    <span class="form-element__option">{{ i.label }}</span>
  </label>
</li>
{% endfor %}
</ul>
{% endmacro %}
