{% from 'components/card/card__block.njk' import cardBlock %}

{# START MACRO #}
{% macro card(
     type     = "default",
     title    = "",
     body     = "",
     imageURL = "http://www.placekitten.com/g/500/500"
  ) %}

  {# START COMPONENT #}
  <div class="card">
    {% if type == "profile" or title %}
      <div class="card__head">
        {% if type == "profile" %}
        <div class="card__image card__image--avatar">
          <img src="{{imageURL}}"/>
        </div>
        {% endif %}
        {% if title %}
        <h3 class="card__title">{{title}}</h3>
        {% endif %}
      </div>
    {% endif %}
    {% if body %}
    {{ cardBlock(body) }}
    {% endif %}
  </div>
  {# /COMPONENT #}

{% endmacro %}
{# /MACRO #}
