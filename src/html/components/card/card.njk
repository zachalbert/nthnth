{% from 'components/card/card__block.njk' import cardBlock %}

{# START MACRO

Arguments
---------
- avatarURL     : string
- bgType        : string
- bgURL         : string
- body          : string
- borderSize    : number
- borderColor   : number
- padding       : number
- shadow        : number
- title         : string

#}

{% macro card(
    avatarURL,
    bgType,
    bgURL,
    body,
    borderSize,
    borderColor,
    padding,
    shadow,
    title
  ) %}

  {# START COMPONENT #}
  <div class="card">
    {% if avatarURL or title %}
      <div class="card__head">
        {% if avatarURL %}
        <div class="card__image card__image--avatar">
          <img src="{{avatarURL}}"/>
        </div>
        {% endif %}
        {% if title %}
        <h3 class="card__title">{{title}}</h3>
        {% endif %}
      </div>
    {% endif %}
    {% if body %}
    {{ cardBlock(body) }}
    {% endif %}
  </div>
  {# /COMPONENT #}

{% endmacro %}
{# /MACRO #}
