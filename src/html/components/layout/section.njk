{% macro section(
    accent = false,
    row = false,
    rowClasses,
    bgURL,
    bgOverlayModifierClass,
    container = true
  ) %}

  {% if bgOverlayModifierClass %}
    {% set overlayClasses = " bg-overlay bg-overlay--" + bgOverlayModifierClass %}
  {% endif %}

  {# START COMPONENT #}
  <section class="section{{ " section--accent" if accent }}{{ overlayClasses }}"{% if bgURL %} style="background-image: url('{{ bgURL }}');"{% endif %}>
    {% if container %}<div class="container">{% endif %}
      {% if row %}<div class="row{{ ' '+rowClasses if rowClasses }}">{% endif %}
      {{ caller() }}
      {% if row %}</div>{% endif %}
    {% if container %}</div>{% endif %}
  </section>
  {# /COMPONENT #}

{% endmacro %}
{# /MACRO #}
