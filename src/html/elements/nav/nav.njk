{##
 # Main navigation
 #
 # @example
 #   {{ nav() }}
 #}

{% macro nav(
  cms,
  site,
  path,
  fixed = true,
  transparent = false
  ) %}

<nav class="nav nav--top {{ 'nav--fixed' if fixed }} {{ 'nav--transparent' if transparent }} nav--off-canvas">
  <div class="nav__container">
    <div class="nav__brand">
      <div class="nav__logo">
        <a href="/"><img class="svg" src="images/resolute-logo2.svg" alt="Good svg logo goes here plz"></a>
      </div>
      <div class="nav__brand-text">
        {{ site.title }}
      </div>
    </div>
    <ul class="nav__links">

      {# Fancy auto-nav, generated from any `page` entry in contentful #}
      {% for page in cms.page %}
        <li>
          <a href="/{{ page.name }}.html"{{ ' class="is-active"' if ( page.name == path ) }}>{{ page.title }}</a>
        </li>
      {% endfor %}
    </ul>
    <div class="nav__overlay"></div>
    <div class="nav__menu-toggle"><div class="visuallyhidden">Navigation Menu</div></div>
  </div>
</nav>

{% endmacro %}
