{##
 # Page subtitle (outputs an H2)
 #
 # @param {string} [text] The text to display
 # @param {number} [level] Choose the tags and visual style to set the text in
 #
 # @example
 #   {{ subtitle( "Subtitle Text" )) }}
 #}

{% macro subtitle(
  text,
  level = "3",
  class
) %}

  {% if level == "1" %}
    <h2 class="page__subtitle{{ ' '+class if class}}">{{ text }}</h2>
  {% elif level == "2" %}
    <h3 class="section__subtitle{{ ' '+class if class}}">{{ text }}</h3>
  {% elif level == "3" %}
    <h3 class="{{ ' '+class if class}}">{{ text }}</h3>
  {% elif level == "4" %}
    <h4 class="{{ ' '+class if class}}">{{ text }}</h4>
  {% else %}
    <p class="section__subtitle{{ ' '+class if class}}">{{ text }}</p>
  {% endif %}

{% endmacro %}
