{##
 # Set up grid columns, includes a row by default
 #
 # @param {string} [row=true] - Wrap a div.row around the div containing grid classes
 # @param {string} [rowClasses] - Add additional classes to div.row
 # @param {number} [(xs, sm, md, lg, xl)] - Number of grid columns at each breakpoint
 # @param {number} [(xsOffset, smOffset, mdOffset, lgOffset, xlOffset)] - Number of grid columns to offset from the left at each breakpoint
 #
 # @example
 # {% call columns(rowClasses="text-center accent", xs=6, lg=4, mdOffset=2) %}
 # ...
 # {% endcall %}
 #}

{% macro columns(
  row = true,
  rowClasses = "center-xs",
  colClasses,
  xs,
  sm,
  md,
  lg,
  xl,
  xsOffset,
  smOffset,
  mdOffset,
  lgOffset,
  xlOffset
) %}

{% if row %}
  <div class="row{{ ' '+rowClasses if rowClasses }}">
{% endif %}

<div class="{{ colClasses if colClasses}}{{ " col-xs-" + xs if xs else " col-xs" }}{{ " col-sm-" + sm if sm else " col-sm-10" }}{{ " col-md-" + md if md }}{{ " col-lg-" + lg if lg }}{{ " col-xl-" + xl if xl }}{{ " col-xs-offset-" + xsOffset if xsOffset }}{{ " col-sm-offset-" + smOffset if smOffset }}{{ " col-md-offset-" + mdOffset if mdOffset }}{{ " col-lg-offset-" + lgOffset if lgOffset }}{{ " col-xl-offset-" + xlOffset if xlOffset }}">
  {{ caller() }}
</div>

{% if row %}
  </div>
{% endif %}

{% endmacro %}
